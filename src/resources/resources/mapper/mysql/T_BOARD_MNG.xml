<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.kyoungjin.dataobject.dao.BoardMngDao">

	<sql id="commonBoardMng">
	 	SELECT a.BOARD_CD,
			   a.BOARD_NM,
			   a.LIST_ROW_CNT,
			   a.LIST_BLOCK_CNT,
			   a.TITLE_SPLIT_LEN,
			   a.CONTENTS_SPLIT_LEN,
			   a.USE_YN,
			   a.REG_DATE,
			   a.REG_ID,
			   a.UPT_DATE,
			   a.UPT_ID
	 	 FROM T_BOARD_MNG a
		<include refid="commonBoardMngWhere"></include>
	</sql>

	<sql id="commonBoardMngWhere">
		<where>
			<if test='searchTitle != null and !"".equals(searchTitle)'>
				AND a.BOARD_NM = #{searchTitle}
			</if>
	 	</where>
	</sql>

	<select id="selectBoardMngList" parameterType="hashmap" resultType="BoardMngVo">
		/** kr.kyoungjin.dataobject.dao.BoardMngDao.selectBoardMngList  */
		SELECT 
	  			b.*
		 FROM (
				SELECT 
				    	@RNUM:=@RNUM+1 AS ROWNUM , 
				    	a.*
				 FROM 
				    (SELECT @RNUM:=0) R, 
				    (
				    	<include refid="commonBoardMng"></include>
				    )a 
		) as b
	</select>

	<select id="selectBoardMngListCount" parameterType="hashmap"  resultType="long">
	    /** kr.kyoungjin.dataobject.dao.BoardMngDao.selectBoardMngListCount  */
	    SELECT COUNT(1) CNT	
	      FROM (
			<include refid="commonBoardMng"></include>
	      )a 
	</select>

	<select id="view" parameterType="BoardMngVo" resultType="BoardMngVo">
		
	</select>
	 
	 <select id="count"  parameterType="BoardMngVo"  resultType="Integer">
	 
	 </select>
	 
	 <insert id="insert" parameterType="BoardMngVo" >
	 	
	 </insert>
	 
	 
	 <update id="update" parameterType="BoardMngVo">
	   
	 </update>
	 
	 
	 <delete id="delete" parameterType="BoardMngVo">
	  
	 </delete>
	 
	 
</mapper>	